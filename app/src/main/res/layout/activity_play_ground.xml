            android:text="A"
            android:minWidth="10dp"
            app:strokeColor="@color/gray"
            android:textColor="@color/orange"
            android:layout_margin="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:minWidth="10dp"
            app:strokeColor="@color/gray"
            android:textColor="@color/orange"
            android:layout_margin="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:minWidth="10dp"
            app:strokeColor="@color/gray"
            android:textColor="@color/orange"
            android:layout_margin="5dp"
            />
